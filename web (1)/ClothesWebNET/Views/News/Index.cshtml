@model IEnumerable<ClothesWebNET.Models.News>
@{
    ViewBag.Title = "Bản tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/main")

<style>
    .news-container { margin-top: 160px; }
    .news-list { margin-top: 18px; }
    .news-item {
        padding: 14px 16px;
        border: 1px solid rgba(0,0,0,0.08);
        border-radius: 10px;
        margin-bottom: 12px;
        background: #fff;
    }
    .news-cover {
        width: 140px;
        height: 92px;
        object-fit: cover;
        border-radius: 10px;
        border: 1px solid rgba(0,0,0,0.08);
        flex: 0 0 auto;
        background: #f3f3f3;
    }
    .news-body { flex: 1 1 auto; }
    .news-title { font-size: 18px; font-weight: 700; color: #050505; }
    .news-meta { margin-top: 6px; font-size: 12px; color: #6b7280; }
    .news-item a { color: inherit; display: flex; gap: 14px; width: 100%; }
</style>

<div class="container news-container">
    <div class="breadcrumb">
        <div class="grid">
            <a href="/">Trang chủ / </a>
            <span class="br-main">Bản tin</span>
        </div>
    </div>

    <div class="grid">
        <div class="product-heading" style="text-align:left; padding-left:0;">Bản tin</div>

        @if (ViewBag.NewsError != null)
        {
            <div style="padding: 12px; color: #b91c1c;">
                Không load được bản tin: @ViewBag.NewsError
            </div>
        }

        <div class="news-list">
            @foreach (var item in Model)
            {
                <div class="news-item">
                    <a href="/News/Details/@item.idNews">
                        @if (!string.IsNullOrWhiteSpace(item.coverImageUrl))
                        {
                            <img class="news-cover" src="@item.coverImageUrl" alt="@item.title" />
                        }
                        else
                        {
                            <div class="news-cover"></div>
                        }
                        <div class="news-body">
                            <div class="news-title">@item.title</div>
                            <div class="news-meta">
                                @(item.updatedAt.HasValue ? item.updatedAt.Value.ToString("dd/MM/yyyy") : item.createdAt.ToString("dd/MM/yyyy"))
                                @if (!string.IsNullOrWhiteSpace(item.authorName))
                                {
                                    <span> • @item.authorName</span>
                                }
                            </div>
                        </div>
                    </a>
                </div>
            }

            @if (Model == null || !Model.Any())
            {
                <div style="padding: 12px; font-size: 14px;">Chưa có bản tin nào.</div>
            }
        </div>
    </div>
</div>


